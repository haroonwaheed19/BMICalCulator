<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/layout_background"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <androidx.cardview.widget.CardView
                android:id="@+id/cvWeight"
                android:layout_width="@dimen/dim_310"
                android:layout_height="@dimen/dim_140"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dim_50"
                android:animateLayoutChanges="false"
                app:cardBackgroundColor="@color/card_background"
                app:cardCornerRadius="@dimen/dim_20"
                app:cardElevation="@dimen/dim_15"
                app:cardMaxElevation="@dimen/dim_15">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/tvWeight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Weight"
                        android:padding="@dimen/dim_5"
                        android:textColor="@color/text_Hint"
                        android:textSize="@dimen/font_size_22"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.15"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.22" />

                    <EditText
                        android:id="@+id/etWeight"
                        android:layout_width="@dimen/dim_160"
                        android:layout_height="@dimen/dim_75"
                        android:ems="10"
                        android:hint="0"
                        android:inputType="numberDecimal"
                        android:textColor="@color/amber"
                        android:textColorHint="@color/blue_50"
                        android:textSize="@dimen/font_size_30"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.22"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.783" />

                    <Spinner
                        android:id="@+id/weightSpinner"
                        android:layout_width="@dimen/dim_85"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/amber"
                        android:entries="@array/weight_units"
                        android:minHeight="@dimen/dim_65"
                        android:paddingTop="@dimen/dim_10"
                        android:paddingRight="@dimen/dim_20"
                        android:paddingBottom="@dimen/dim_10"
                        android:scrollbarSize="@dimen/dim_20"
                        android:textAlignment="center"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.87"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.85" />
                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cvHeight"
                android:layout_width="@dimen/dim_310"
                android:layout_height="@dimen/dim_140"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dim_15"
                android:animateLayoutChanges="false"
                app:cardBackgroundColor="@color/card_background"
                app:cardCornerRadius="@dimen/dim_20"
                app:cardElevation="@dimen/dim_15"
                app:cardMaxElevation="@dimen/dim_15">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/tvHeight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Height"
                        android:padding="@dimen/dim_5"
                        android:textColor="@color/text_Hint"
                        android:textSize="@dimen/font_size_22"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.15"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.22" />

                    <EditText
                        android:id="@+id/etHeight"
                        android:layout_width="@dimen/dim_160"
                        android:layout_height="@dimen/dim_75"
                        android:ems="10"
                        android:hint="0"
                        android:inputType="numberDecimal"
                        android:textColor="@color/amber"
                        android:textColorHint="@color/blue_50"
                        android:textSize="@dimen/font_size_30"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.22"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.783" />

                    <Spinner
                        android:id="@+id/heightSpinner"
                        android:layout_width="@dimen/dim_85"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/amber"
                        android:entries="@array/height_units"
                        android:minHeight="@dimen/dim_65"
                        android:paddingTop="@dimen/dim_10"
                        android:paddingRight="@dimen/dim_20"
                        android:paddingBottom="@dimen/dim_10"
                        android:scrollbarSize="@dimen/dim_20"
                        android:textAlignment="center"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.87"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.85" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <Button
                android:id="@+id/btCalculate"
                android:layout_width="@dimen/dim_170"
                android:layout_height="@dimen/dim_69"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dim_10"
                android:backgroundTint="@color/amber"
                android:elevation="@dimen/dim_15"
                android:text="Calculate"
                android:textColor="@color/white"
                android:textColorLink="@color/purple"
                android:textSize="@dimen/font_size_24"
                android:textStyle="bold"
                app:cornerRadius="@dimen/dim_20" />

            <Button
                android:id="@+id/btnClear"
                android:layout_width="@dimen/dim_110"
                android:layout_height="@dimen/dim_55"
                android:padding="@dimen/dim_5"
                android:layout_gravity="center_horizontal"
                android:backgroundTint="@color/red"
                android:text="Clear"
                android:textColor="@android:color/white"
                android:textColorLink="@color/red"
                android:textSize="@dimen/font_size_25"
                android:textStyle="bold"
                app:cornerRadius="@dimen/dim_20" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cvResult"
                android:layout_width="@dimen/dim_310"
                android:layout_height="@dimen/dim_200"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dim_5"
                android:layout_marginBottom="@dimen/dim_1"
                android:visibility="gone"
                app:cardBackgroundColor="@color/card_background"
                app:cardCornerRadius="@dimen/dim_20"
                app:cardElevation="@dimen/dim_15"
                app:cardMaxElevation="@dimen/dim_15">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvRes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="@dimen/dim_18"
                        android:padding="@dimen/dim_8"
                        android:text="Result:"
                        android:textColor="@color/amber"
                        android:textSize="@dimen/font_size_30"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvResultIndex"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_size_30"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvResult"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textColor="@color/dark_green"
                        android:textSize="@dimen/font_size_30"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvInfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dim_10"
                        android:textAlignment="center"
                        android:textColor="@color/amber"
                        android:textSize="@dimen/font_size_20"
                        android:textStyle="bold" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>